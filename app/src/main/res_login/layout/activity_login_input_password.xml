<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_color"
        android:paddingHorizontal="26dp"
        android:paddingTop="46dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/login_email_back_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:textColor="@color/white"
            android:src="@mipmap/icon_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_email_title_tv"
            android:layout_marginTop="7dp"
            android:text="@string/input_password"
            android:textColor="@color/login_title_color_c8c8c8"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_email_back_img"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_password_edit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:maxLines="1"
            android:layout_marginHorizontal="1dp"
            android:hint="@string/login_password"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:background="@drawable/rgb32363b_r8"
            android:textColorHint="#8F9092"
            android:textColor="@color/white"
            android:layout_marginTop="31dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_email_title_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_password_again_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="@string/input_password_again"
            android:gravity="center"
            android:textColor="@color/login_title_color_c8c8c8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_password_edit"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_password_again_edit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/login_password"
            android:maxLines="1"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/rgb32363b_r8"
            android:textColorHint="#8F9092"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_password_again_tip_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_password_next_tv"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:textSize="14sp"
            android:text="@string/login_setting_userinfo_next"
            android:enabled="false"
            android:background="@drawable/bg_ef7300_99999_status_corners_8"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_password_again_edit"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_password_rule_tip_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="10sp"
            android:text="@string/login_password_rule_tip"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="9dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:textColor="@color/login_tips_e03a42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_password_next_tv"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>