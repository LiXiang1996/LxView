<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_color"
        android:paddingHorizontal="26dp"
        android:paddingTop="46dp">

        <TextView
            android:id="@+id/login_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textColor="@color/login_title_color_c8c8c8"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_title_slogan"
            android:textColor="#8F9092"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/login_tv_title" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_join_meeting_tv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/login_join_meeting"
            android:background="@drawable/rgb202225_r8"
            android:gravity="center"
            android:textColor="@color/login_tv_color_f6f6f6"
            android:layout_marginBottom="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_count_tv"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_count_tv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="16sp"
            android:text="@string/login"
            android:textStyle="bold"
            android:background="@drawable/rgbef7300_r8"
            android:gravity="center"
            android:layout_marginBottom="13dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_create_count_tv"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_create_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingVertical="20dp"
            android:layout_marginBottom="34dp"
            android:textSize="16sp"
            android:text="@string/create_count"
            android:gravity="center"
            android:textColor="@color/login_tv_color_f6f6f6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_private_policy_tv"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_private_policy_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/read_private_policy"
            android:gravity="center"
            android:layout_marginBottom="28dp"
            android:textColor="@color/login_tv_color_4df6f6f6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>