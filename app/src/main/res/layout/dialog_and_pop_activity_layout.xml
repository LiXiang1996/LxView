<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_ll"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sample_alert_dialog_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="系统AlertDialog" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sample_dialog_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="自定义Dialog" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sample_pop_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="自定义PopWindow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sample_dialog_view_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="自定义DialogVIewLoading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/picture_dialog_view_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="picture_dialog_view_loading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_system_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="222" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="333" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_dialog_and_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="444" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>