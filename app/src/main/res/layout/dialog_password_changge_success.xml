<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rgb1a1c1f_r12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="132dp"
            android:layout_height="101dp"
            android:id="@+id/dialog_change_success_img"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/dialog_icon_success"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="85dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_change_success_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/login_title_color_c8c8c8"
            android:text="@string/login_password_change_success"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_change_success_img"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF26282A"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_change_success_confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="чбошод"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/login_title_color_c8c8c8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_change_success_tip"
            app:layout_constraintEnd_toEndOf="parent"/>








    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>