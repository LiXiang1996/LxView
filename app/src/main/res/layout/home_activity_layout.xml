<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_ll"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_define_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="自定义View" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_define_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="自定义Loading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_define_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="自定义TimePicker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_system_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="系统TImePiker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_system_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="系统datePiker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/im_msg_bg_green"
            android:padding="@dimen/dp_10"
            android:text="11111" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>